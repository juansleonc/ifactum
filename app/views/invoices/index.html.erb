<%= link_to "Nueva factura", new_invoice_path %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombres</th>
      <th scope="col">Apellidos</th>
      <th scope="col">Empresa</th>
      <th scope="col">Item nombre</th>
      <th scope="col">Item descripcion</th>
      <th scope="col">Item precio</th>
      
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |invoice| %>
        <tr>
        <th scope="row"><%= invoice.number_invoice %></th>
        <td><%= invoice.first_name %></td>
        <td><%= invoice.last_name %></td>
        <td><%= invoice.company.name %></td>
        <td><%= invoice.items.first.name %></td>
        <td><%= invoice.items.first.description %></td>
        <td><%= number_to_currency invoice.items.first.price %></td>
        
        </tr>
    <% end %>
    
  </tbody>
</table>